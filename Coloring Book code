//SPLASH SCREEN
var splash = function(){
var creators = ['Matthew Rice', 'Tyler Palmer']; //USES AN ARRAY
background(112, 237, 143);
fill(255, 255, 255);
textSize(50);
text("Coloring Book",45,17);
textSize(18);
text(creators[0],58,80);
text("and",178,80);
text(creators[1],220,80);
drawBitmoji(15,261,110);
drawTyler(290,251,71);
fill(106, 0, 212); //color of right crayon(purple)
rect(292,137,24,77); //middle of crayon (purple)
fill(213, 97, 255); //color for top and bottom of crayon (right)
triangle(289, 213, 321, 213, 306, 243);
rect(291,119,26,18);
fill(255, 0, 0); //color for top and bottom of crayon (left)
triangle(64, 215, 92, 215, 78, 243); //bottom of crayon (left)
rect(64,119,26,18); //top of crayon(left)
fill(186, 0, 0); //middle of crayon color (red)
rect(65,137,24,77); //middle of crayon(left)
fill(17, 237, 233); //top of crayon color (blue)
rect(183,120,26,18); //top of crayon (middle)
fill(0, 191, 185); //middle of crayon color (blue)
rect(184,137,24,123); //middle of crayon (middle)
fill(17, 237, 233); //bottom of crayon color (blue)
triangle(182, 257, 211, 256, 197, 296); //bottom of crayon (middle)
startButton.draw();
};

//MOUSE CLICKED FUNCTION
mouseClicked = function() {
    startButton.handleMouseClick();
    nextButton.handleMouseClick();
    level1Button.handleMouseClick();
    level2Button.handleMouseClick();
    level3Button.handleMouseClick();
    level4Button.handleMouseClick();
    level5Button.handleMouseClick();
    level6Button.handleMouseClick();
    level7Button.handleMouseClick();
    redButton.handleMouseClick();
    blueButton.handleMouseClick();
    greenButton.handleMouseClick();
    yellowButton.handleMouseClick();
    brownButton.handleMouseClick();
    orangeButton.handleMouseClick();
    pinkButton.handleMouseClick();
    blackButton.handleMouseClick();
   
};

draw= function() {
   if(currentScene === 0)
     {splash();
     }else if (currentScene === 1){   //INSTRUCTION SCENE
      instruction();   
     }else if (currentScene === 2){   //LEVEL SELECT
      levels(); 
     }
     else if (currentScene === 3){   //LEVEL 1
         level1();
         noLoop();
    }
    else if(currentScene === 4){   //LEVEL 2
     level2(); 
     noLoop();
    }
    else if(currentScene === 5){   //LEVEL 3
         level3();
         noLoop();
    }
    else if(currentScene === 6){   //LEVEL 4
        level4();
        noLoop();
    }
    else if(currentScene === 7){   //LEVEL 5
        level5();
        noLoop();
    }
    else if(currentScene ===8){   //LEVEL 6
        level6();
        noLoop();
    }
    else if(currentScene === 9){
        level7();
        noLoop();
    }
};
