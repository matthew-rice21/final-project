    triangle(181, 226, 197, 180, 216, 226);
    line(271,222,351,194); //right whisker
    line(259,235,371,211); //right whisker
    line(259,245,371,235); //right whisker
    line(139,245,41,235); //left whisker
    line(145,236,29,211); //left whisker
    line(136,220,17,194); //left whisker
    redButton.draw();
    blueButton.draw();
    greenButton.draw();
    yellowButton.draw();
    brownButton.draw();
    orangeButton.draw();
    pinkButton.draw();
    blackButton.draw();
};

